<h1 class = "mt-3">新規投稿作成</h1>
<div class = "row">
    <div class = "mt-4 form col-6">
        <%= form_with(model: @post, local: true) do |f| %>
          <div class = "form-group">
             <%= f.label :title, "タイトル" %>
             <%= f.text_field :title, class:"form-control" %>
          </div>
          <div  class = "form-group">
              <%= f.label :product_name, "商品名" %>
              <%= f.text_field :product_name, class:"form-control" %>
          </div>
          <div class = "form-group" >
              <%= f.label :price , "値段" %>
              <%= f.text_field :price, class:"form-control" %>円
          </div>
          <div class = "form-group">
              <%= f.label :review, "レビュー" %>
              <%= f.text_area :review, class: "form-control",size: "20x10"%>
          </div>
          <div>
            <%= f.submit "投稿する" , class: "btn btn-primary"%>
          </div>
        <% end %>
    </div>
</div>
