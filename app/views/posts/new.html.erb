<h1 class = "mt-3">新規投稿作成</h1>
<div class = "row">
    <div class = "mt-4 form col-6">
        <%= form_with(model: @post, local: true) do |f| %>
          <%= render "layouts/error_messages", model: @post %>
          <div class = "form-group">
             <%= f.label :title, "タイトル(必須)" %>
             <%= f.text_field :title, class:"form-control",require: true %>
          </div>
          <div  class = "form-group">
              <%= f.label :product_name, "商品名(必須)" %>
              <%= f.text_field :product_name, class:"form-control" %>
          </div>
          <div class = "form-group" >
              <%= f.label :price , "値段(必須)" %>
              <%= f.text_field :price, class:"form-control" %>円
          </div>
          <div class = "form-group">
              <%= f.label :review, "レビュー(必須)" %>
              <%= f.text_area :review, class: "form-control",size: "20x10"%>
          </div>
          <!-- 写真 -->
          <h3>写真を追加する。</h3>
          <div>
            <%= f.fields_for :images do |image| %>
              <%= render 'image_fields', f: image %>
            <% end %>
            <%= link_to_add_association "画像を追加する", f, :images ,class:"btn btn-success mt-4 mb-4"%>
          </div>
          <!-- 写真ここまで -->
          <div>
            <%= f.submit "投稿する" , class: "btn btn-primary"%>
          </div>
        <% end %>
    </div>
</div>
